RewriteEngine On

# pass all the non uploads and non admin requests to frontend application
RewriteCond %{REQUEST_URI} !^/(cmgdemocommunity/uploads)
RewriteCond %{REQUEST_URI} !^/(cmgdemocommunity/admin/web|cmgdemocommunity/admin)
RewriteRule !(frontend/web) /cmgdemocommunity/frontend/web%{REQUEST_URI} [L]

# pass all the admin requests to admin application
RewriteCond %{REQUEST_URI} ^/(cmgdemocommunity/admin)
RewriteRule !(admin/web) /cmgdemocommunity/admin/web%{REQUEST_URI} [L]

# handle frontend application requests
RewriteCond %{REQUEST_URI} ^/cmgdemocommunity/frontend/web
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)\?*$ /cmgdemocommunity/frontend/web/index.php/$1 [L,QSA]

# handle admin application requests
RewriteCond %{REQUEST_URI} ^/cmgdemocommunity/admin/web
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)\?*$ /cmgdemocommunity/admin/web/index.php/$1 [L,QSA]
